#!/usr/bin/env bash
file=$1
w=$2
h=$3
x=$4
y=$5

preview() {
	kitty +kitten icat --silent --stdin no --transfer-mode file --place "${w}x${h}@${x}x${y}" "$1" </dev/null >/dev/tty
	exit 1
}

TEMPDIR=~/.cache

file="$1"
shift
case "$(basename "$file" | tr '[A-Z]' '[a-z]')" in
*.tar*) tar tf "$file" ;;
*.zip) unzip -l "$file" ;;
*.rar) unrar l "$file" ;;
*.7z) 7z l "$file" ;;
*.avi | *.mp4 | *.mkv)
	thumbnail="$TEMPDIR/thumbnail.png"
	ffmpegthumbnailer -i "$file" -o "$thumbnail" -s 900
	preview "$thumbnail"
	;;
*.pdf)
	thumbnail="$TEMPDIR/thumbnail"
	pdftocairo -png -singlefile -rx 75 -ry 75 "$file" "$thumbnail"
	preview "$thumbnail.png"
	;;
*.jpg | *.jpeg | *.png | *.webp)
	preview "$file"
	;;
*.ttf | *.otf | *.woff)
	thumbnail="$TEMPDIR/thumbnail.png"
	fontpreview -i "$file" -o "$thumbnail"
	preview "$thumbnail"
	;;
*.svg)
	thumbnail="$TEMPDIR/thumbnail.png"
	convert "$file" "$thumbnail"
	preview "$thumbnail"
	;;
*) pistol "$file" ;;
esac
return 127 # nonzero retcode required for lf previews to reload
